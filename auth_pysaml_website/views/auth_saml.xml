<odoo>
    <record model="ir.ui.view" id="view_saml_provider_form">
        <field name="name">auth.saml.provider.form</field>
        <field name="model">auth.saml.provider</field>
        <field name="inherit_id" ref="auth_pysaml.view_saml_provider_form" />
        <field name="priority">75</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='display_settings']" position="inside">
                <field name="website_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>
</odoo>
